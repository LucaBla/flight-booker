<%= form_with(model: @booking) do |form| %>
  <% if @booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% @booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :flight_id, value: params[:id] %>
    <%= form.hidden_field :date, value: Date.today %>
  </div>

  <div>
  <% params[:passengers].to_i.times do %>
    <%= form.fields_for :passengers do | sub_form |%>
      <div>
        <%= sub_form.label :name %>
        <%= sub_form.text_field :name %>
      </div>
      <div>
        <%= sub_form.label :email %>
        <%= sub_form.text_field :email %>
      </div>
    <% end %>
    <br>
  <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>