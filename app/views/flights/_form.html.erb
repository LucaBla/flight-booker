<%= form_with(url: '/flights', method: "get") do |form| %>

  <div>
    <%= form.label :depature_airport_id, style: "display: block" %>
    <%= form.select(:depature_airport_id, @airports) %>
  </div>

  <div>
    <%= form.label :arrival_airport_id, style: "display: block" %>
    <%= form.select :arrival_airport_id, @airports %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.select(:date, @date_options) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
